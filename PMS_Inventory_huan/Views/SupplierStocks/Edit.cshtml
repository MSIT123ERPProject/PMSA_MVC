@model PMS_Inventory_huan.Models.SourceList
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@PMS_Inventory_huan.Resources.AppResource.Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

